<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1200.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #000000; -fx-border-width: 3;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.omerta.ProductsAdminConnector">
   <children>
      <TableView fx:id="product" prefHeight="500.0" prefWidth="1200.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #000000; -fx-border-width: 3;">
        <columns>
          <TableColumn fx:id="name" minWidth="150.0" prefWidth="150.0" resizable="false" style="-fx-background-color: #FFFFFF;" text="Наименование" />
          <TableColumn fx:id="category" minWidth="150.0" prefWidth="150.0" resizable="false" style="-fx-background-color: #FFFFFF;" text="Тип товара" />
            <TableColumn fx:id="rarity" minWidth="150.0" prefWidth="150.0" resizable="false" style="-fx-background-color: #FFFFFF;" text="Редкость" />
            <TableColumn fx:id="desc" minWidth="150.0" prefWidth="150.0" resizable="false" style="-fx-background-color: #FFFFFF;" text="Описание" />
            <TableColumn fx:id="countInStock" minWidth="150.0" prefWidth="150.0" resizable="false" style="-fx-background-color: #FFFFFF;" text="Количество в наличии" />
            <TableColumn fx:id="cost" minWidth="150.0" prefWidth="150.0" resizable="false" style="-fx-background-color: #FFFFFF;" text="Стоимость" />
            <TableColumn fx:id="image" minWidth="150.0" prefWidth="150.0" resizable="false" style="-fx-background-color: #FFFFFF;" text="Изображение" />
            <TableColumn minWidth="75.0" prefWidth="75.0" resizable="false" style="-fx-background-color: #FFFFFF;" />
            <TableColumn minWidth="75.0" prefWidth="75.0" resizable="false" style="-fx-background-color: #FFFFFF;" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <Button fx:id="back" alignment="CENTER" layoutX="21.0" layoutY="526.0" mnemonicParsing="false" onAction="#back" prefHeight="60.0" prefWidth="160.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #333333; -fx-border-width: 3; -fx-border-radius: 10;" text="Назад" AnchorPane.leftAnchor="30.0">
         <font>
            <Font name="Lato Semibold" size="16.0" />
         </font>
      </Button>
      <Button fx:id="reload" alignment="CENTER" layoutX="680.0" layoutY="526.0" mnemonicParsing="false" onAction="#reloadProduct" prefHeight="60.0" prefWidth="160.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #333333; -fx-border-width: 3; -fx-border-radius: 10;" text="Обновить" AnchorPane.rightAnchor="220.0">
         <font>
            <Font name="Lato Semibold" size="16.0" />
         </font>
      </Button>
      <Button fx:id="addProduct" alignment="CENTER" layoutX="882.0" layoutY="526.0" mnemonicParsing="false" onAction="#addProduct" prefHeight="60.0" prefWidth="160.0" style="-fx-background-color: #FFFFFF; -fx-border-color: #333333; -fx-border-width: 3; -fx-border-radius: 10;" text="Добавить товар" AnchorPane.rightAnchor="30.0">
         <font>
            <Font name="Lato Semibold" size="16.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
